<link rel="stylesheet" href="/css/home.css" />

<div class="container">
  <!-- <section id="news-feed"><h4>News Feed</h4></section> -->

  <section id="feed-posts">
    <h3>Posts</h3>
    <% if(locals.user) { %>
    <form action="/posts/create" method="post" id="new-post-form">
      <textarea
        name="content"
        id="posts"
        cols="100"
        rows="5"
        placeholder="Write your posts..."
        required
      ></textarea
      ><br />
      <button class="btn btn-primary m-2" type="submit"><h5>Post</h5></button>
    </form>
    <% } %>

    <div id="show-posts">
      <ul>
        <% for(post of posts) { %> <%- include('_posts') -%> <% } %>
      </ul>
    </div>
  </section>

  <section id="freind-list">
    <h4>Freinds</h4>
    <% for(u of all_users) { %>
    <p>
      <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
    </p>
    <% } %>
  </section>

  <script src="/js/home_posts.js"></script>
</div>
