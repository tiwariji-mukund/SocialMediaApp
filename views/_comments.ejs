<div class="comment-form">
  <% if(locals.user) { %>
  <form action="/comments/create" method="post" id="comment-post-form">
    <input type="text" name="content" placeholder="Add Comment..." required />
    <input type="hidden" name="post" value="<%= post._id %>" />
    <input type="submit" value="Comment" />
  </form>
  <% } %>
</div>
<div class="post-comment-lists">
  <ul id="post-comment-<%= post._id %>">
    <% for(let comment of post.comments) { %>
    <li>
      <%= comment.content %>
      <br />&#9;&#9;<small><%= comment.user.name %></small>
      <% if(locals.user && (locals.user.id == comment.user.id || locals.user.id
      == post.user.id)) { %>
      <a href="/comments/delete/<%= comment.id %>"
        ><small>Delete Comment</small></a
      >
      <% } %>
    </li>
    <% } %>
  </ul>
</div>
